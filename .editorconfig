root = false

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{*.py,*.py3,*.py2,*.bash,*.sh,*.zsh,.zshrc,.bashrc}]
indent_size = 4

[*.md]
max_line_length = 80

[*.go]
indent_style = tab
indent_size = 4

[home/.gitconfig]
indent_style = tab
indent_size = 4
